<!-- Products -->
<div class="container">
<% @products.in_groups_of(3) do |product| %>
  <div class="row">
    <% product.each do |product| %>
      <div class="col-md-4">
        <div class="product-card">
          <h1><%= product.name %></h1>
          <%= cl_image_tag product.photo, height: 300 %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
</div>

<div class="home-page">
  <section class="home-page_first-section">
    <h3>FIRST SECTION</h3>
    <% @products.each do |product| %>
        <h3><%= product.name  %></h3>
        <%= product.description %>
        <%= product.price_cents %>
    <% end %>
  </section>

  <section class="home-page_second-section">
    <h3>SECOND SECTION</h3>
  </section>

  <section class="home-page_third-section">
    <h3>THIRD SECTION</h3>
  </section>

</div> 
